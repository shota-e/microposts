<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(current_user) %>">
    <strong id="following" class="stat">
      <%= current_user.following_relationships.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(current_user) %>">
    <strong id="followers" class="stat">
      <%= current_user.follower_relationships.count %>
    </strong>
    followers
  </a>
</div>